
@model IEnumerable<GameShop.Models.Game>

@{
    ViewBag.Title = "List";
}

<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Tytuł</th>
            <th scope="col">Opis</th>
            <th scope="col">Producent</th>
            <th scope="col">Platforma</th>
            <th scope="col">Kategoria</th>
            <th scope="col">Cena</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var games in Model) 
        { 
        <tr>
            <th scope="row">@games.GameId</th>
            <td><a href="@Url.Action("Details", "Store", new { id=games.GameId })">@games.GameTitle</a></td>
            <td>@games.Description</td>
            <td>@games.GameStudio</td>
            <td>@games.Platform</td>
            <td>@games.Genre.GenreName</td>
            <td>@games.Price zł</td>
        </tr>
        }
    </tbody>
</table>

